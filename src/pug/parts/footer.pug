include ../mixins
.footer.bg--black
  .footer__logo.l-hidden-lg-up
    .l-container
      a(href="/"): img(src=info.logo.srcLight, alt=info.logo.alt)
  .separator.l-hidden-lg-up
  .footer__top
    .l-container
      .l-flex-wrap
        .l-col-4_md-12.l-hidden-md-down
          .footer__logo
            a(href="index.html"): img(src=info.logo.srcLight, alt=info.logo.alt)
          .footer__socials
            +socials()
        .l-col-6_md-9_sm-8.l-flex.l-hidden-ms-down
          for menu in navs.footer
            .l-col-6
              +simpleNav(menu).footer-nav
        .l-col-2_md-3_sm-4_ms-12
          .footer__contacts
            for item, key in info.contacts
              .footer__contacts-item(class=key)
                +icon(item.icon)
                a(class=`${key}__link`, href=item.href) !{item.title}
  .separator.l-hidden-lg-up
  .footer__socials.l-hidden-lg-up
    .l-container
      +socials()
  .separator
  .footer__bottom.tp-body--small
    .l-container
      .l-flex
        .l-col-5_md-6_ms-12 !{info.copy}
        .l-col-5_md-6_ms-12: a(href=info.legals.url) !{info.legals.title}