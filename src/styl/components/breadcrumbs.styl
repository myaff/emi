.breadcrumb {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: r(24) 0;
  color: $color--black_light;

  .layout--lookbook & {
    color: $color--white;
  }

  &__wrapper {
    z-index: 2;
    border-bottom 1px solid $color--grey;
  }

  a {
    color: inherit;
    text-decoration: none;
  }
  &__item {
    font-size: r(12);
    line-height: r(16);
    display: flex;
    justify-content: center;
    align-items: center;
    &:after {
      display: block;
      content: '';
      background-color: $color--grey;
      height: 1px;
      width: 24px;
      border-radius: 0.5px;
      margin: 0 8px;
    }
    .home {
      font-size: r(16);
      line-height 1
      height 1em
    }
    &.current{
      &:after{
        display: none;
      }
      span {
        color: $color--grey_dark;

        .layout--lookbook & {
          color: $color--white;
        }
      }
    }
  }
}