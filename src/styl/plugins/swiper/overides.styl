.swiper-button-prev,
.swiper-button-next {
  background: transparent;
  circle(r(48));
  top: 0;
  margin-top: 0;
  flexy(center, center);
  border: 1px solid $color--grey;
  font-size: r(24);
  line-height 1;
  color: $color--black;

  {hover-focus-active} {
    outline: 0;
  }
}
.swiper-button-prev {
  left: 0;
}
.swiper-button-next {
  right: 0;
  background: $color--black_light;
  border-color: transparent;
  color: $color--white;
}

.swiper-pagination {
  font-size: r(8);
  line-height 1;

  &-bullet {
    circle(1em);
    background: $color--grey_dark;
    opacity: 1;
    margin: 0 r(6);

    &-active {
      background: $color--black;
    }
  }
}