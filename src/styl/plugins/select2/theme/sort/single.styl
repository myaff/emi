.select2-selection--single {
  background: $select-bg;
  border: $select-border-width solid $select-border-color;
  border-radius: r($select-border-radius);
  transition: background-color 0.2s, border-color 0.2s;

  .select2-selection__rendered {
    color: $select-color;
    font: r($select-font-size)/1.14 $select-font;
    padding-top: r($select-selection-padding-y);
    padding-bottom: r($select-selection-padding-y);
    padding-left: r($select-selection-padding-x);
    padding-right: r($select-selection-padding-x + $select-arrow-width);

    @media $display-breakpoints.ms-and-down {
      padding: r(8);
      background: $color--light;

      .inner {
        .text {
          display none;
        }
      }
    }
  }

  .select2-selection__placeholder {
    color: $select-placeholder-color;
  }

  .select2-selection__arrow {
    display: none;
  }
}

&[dir="rtl"] {
  .select2-selection--single {
    .select2-selection__rendered {
      padding-right: $select-padding-x;
      padding-left: $select-padding-x + $select-arrow-width;
    }
  }
}

&.select2-container--disabled {
  .select2-selection--single {
    background-color: $color--light;
    color: $color--grey_dark;
  }
}


&.select2-container--open {
  .select2-selection--single {
    border-color: $color--grey_dark;
  }
}