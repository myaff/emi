.basket-popup {
  top: 100%;
  right: r(-64);
  margin-top: r(16);
  color: $text-color;

  @media $display-breakpoints.ms-and-down {
    right: r(-56);
    margin-top: r(8);
  }

  &__total {
    padding: r(24) 0;
    flexy(space-between, center);
    border-top 1px solid $color--grey;
    border-bottom 1px solid $color--grey;
    color: $color--black_light;
  }

  &__product {
    padding: r(20) 0;

    @media $display-breakpoints.ms-and-down {
      padding: r(20) 0;
    }
  }

  &#basket-notification {
    transform: translateY(30%);
    transition: transform 0.5s 1s;

    &.active {
      transform: translateY(0);
    }

    @media $display-breakpoints.ms-and-down {
      fixed(0px, 0px);
      right: auto;
      margin-top: 0;
      .popup {
        &__body {
          display none;
        }
        &__title {
          font-size: r(12);
          text-align center;
        }
        &__head {
          padding-bottom: r(8);
          justify-content center;
          border-bottom 0;
        }
        &__foot {
          padding-top: r(8);
        }
      }
    }
  }
}

