.demomenu {
    fixed(0px, 0px);
    color: #fff;
    transform: translateX(-98%);
    transition: transform .3s;
    width: 300px;
    height: 100%;
    z-index: 99999999999;
    background: #2d1434;
    background: #ecefe7;
    color: black;
    font-size: 20px;
    border-right: 1px solid #ccc;
    font-family: Arial;

    @media $display-breakpoints.md-and-down {
        display none;
    }

    &:hover {
        transform: translateX(0);
    }
    ul {
        margin-bottom: 30px;
    }
    h3 {
        font-family: 'pt sans';
        border-bottom: 1px solid lighten(#ccc, 9%);
        padding: 7px;
        font-size: 20px;
        color: #666;
        background: #e0e5d8;
    }
    &__inner {
        box-sizing: border-box;
        width: 100%;
        height: 100%;
        padding: 20px;
        overflow: auto;
        position: relative;
    }
    li {
        margin-top: 5px;
        margin-bottom: 10px;
        a {
            font-size: 16px;
            color: #555;
        }
    }
    &__menu {
        list-style: none;
        padding: 0;
        margin: 0;
        list-style-position: inside;
        margin-top: 20px;
    }
}

